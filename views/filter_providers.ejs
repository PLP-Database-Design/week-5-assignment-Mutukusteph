<form method="GET" action="/providers/filter">
    <label for="specialty">Filter by Specialty:</label>
    <input type="text" name="specialty" id="specialty" required>
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialty</th>
        </tr>
    </thead>
    <tbody>
        <% if (results && results.length > 0) { %>
            <% results.forEach(row => { %>
                <tr>
                    <td><%= row.first_name %></td>
                    <td><%= row.last_name %></td>
                    <td><%= row.provider_specialty %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3">No providers found with the specified specialty.</td>
            </tr>
        <% } %>
    </tbody>
</table>
